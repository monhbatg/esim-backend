{
    "version": 2,
    "builds": [
      {
        "src": "src/main.ts",
        "use": "@vercel/node",
        "config": {
          "maxLambdaSize": "50mb"
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "src/main.ts",
        "methods": ["GET", "POST", "PUT", "PATCH", "DELETE", "OPTIONS"]
      }
    ],
    "functions": {
      "src/main.ts": {
        "maxDuration": 30
      }
    },
    "crons": [
    {
      "path": "/api/cron/check-pending-invoices",
      "schedule": "*/5 * * * *"
    }
  ]
  }
